{% extends '::base.html.twig' %}

{% block head %}
    <!-- Bootstrap Core CSS -->
    <link href="{{ asset('front/css/theme.css') }}" rel="stylesheet">

    <!-- Custom CSS -->
    <link href="{{ asset('front/css/business-casual.css') }}" rel="stylesheet">

    <!-- Fonts -->
    <link href="http://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800" rel="stylesheet" type="text/css">
    <link href="http://fonts.googleapis.com/css?family=Josefin+Slab:100,300,400,600,700,100italic,300italic,400italic,600italic,700italic" rel="stylesheet" type="text/css">

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
    <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
{% endblock %}

{% block stylesheets %}
    <style>
        body {
            background: url('{{ asset('front/images/bg1.jpg') }}') no-repeat center center fixed;
            -webkit-background-size: cover;
            -moz-background-size: cover;
            -o-background-size: cover;
            background-size: cover;
        }
    </style>
{% endblock %}

{% block body %}
    {% trans_default_domain "header" %}
    <div class="brand image">
        <img class="img-responsive center-block" src="{{ asset('front/images/font-accrobranche.png') }}" alt="">
        <h2 class="text-image text-right"><span>Montpellier Nord</span></h2>
    </div>
    <!-- Navigation -->
    <nav class="navbar navbar-default" role="navigation">
        <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <!-- navbar-brand is hidden on larger screens, but visible when the menu is collapsed -->
                <strong><h3 class="text-nowrap text-center">OC'AVENRURES</h3></strong>
            </div>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    <li>
                        <a href="{{ path('website_index', {'_locale': app.request.getLocale() }) }}">{{ 'accueil'|trans }}</a>
                    </li>
                    <li>
                        <a href="{{ path('website_parcours', {'_locale': app.request.getLocale() }) }}">{{ 'parcours'|trans }}</a>
                    </li>
                    <li>
                        <a href="{{ path('website_horaires', {'_locale': app.request.getLocale() }) }}">{{ 'horaires_dates'|trans }}</a>
                    </li>
                    <li>
                        <a href="{{ path('website_tarif', {'_locale': app.request.getLocale() }) }}">{{ 'tarifs'|trans }}</a>
                    </li>
                    <li>
                        <a href="{{ path('website_contact', {'_locale': app.request.getLocale() }) }}">{{ 'contact'|trans }}</a>
                    </li>
                    <li>
                        <a href="{{ path('website_lien', {'_locale': app.request.getLocale() }) }}">{{ 'liens'|trans }}</a>
                    </li>
                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container -->
    </nav>
    {% block content %}
    {% endblock %}

    <footer>
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <p>Copyright &copy; Your Website 2014</p>
                </div>
            </div>
        </div>
    </footer>

    {% block javascript %}
        <!-- jQuery -->
        <script src="{{ asset('./front/js/jquery.js') }}"></script>
        <!-- Bootstrap Core JavaScript -->
        <script src="{{ asset('./front/js/bootstrap.min.js') }}"></script>
        <script>
            $(document).ready(function() {
                jQuery('.carousel').carousel({
                    interval: 5000 //changes the speed
                })
            });
        </script>
    {% endblock %}
{% endblock %}
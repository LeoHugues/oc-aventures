{% block script %}
    <script type="text/javascript">
        var photos = [];
        {% for photo in image.imgGallery.image %}
            photos.push("{{ photo }}");
        {% endfor %}

        var numPhoto = 0;
        $('#btn-next').click(function() {
            numPhoto++;
            displayNavBtn(numPhoto, photos.length);
            var imgUrl = "front/images/gallery/" + photos[numPhoto];
            $('#img-modal').attr('src', imgUrl);
        });

        $('#btn-befor').click(function() {
            numPhoto--;
            displayNavBtn(numPhoto, photos.length);
            var imgUrl = "front/images/gallery/" + photos[numPhoto];
            $('#img-modal').attr('src', imgUrl);
        });

        function displayNavBtn(numPhoto, nbPhoto) {
          if (numPhoto == 0) {
            $('#btn-befor').addClass('disabled');
          } else {
            $('#btn-befor').removeClass('disabled');
          }

          if (numPhoto == nbPhoto - 1) {
            $('#btn-next').addClass('disabled');
          } else {
            $('#btn-next').removeClass('disabled');
          }
        }
    </script>
{% endblock script %}
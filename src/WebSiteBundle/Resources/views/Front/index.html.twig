{% block content %}
    {% trans_default_domain "traduction" %}
    {% set baseImgUrl = "front/images/gallery/" %}
    <div class="intro-block parallax">
        <div class="brand image">
            <div class="img-responsive accrobranche-logo">
                <img class="center-block" src="{{ asset('front/images/oc-logo.png') }}" alt="">
            </div>
            <div class="img-responsive accrobranche-title">
                <img class="img-responsive center-block img-accrobranche" src="{{ asset('front/images/font-accrobranche.png') }}" alt="">
                <div class="text-image-oc text-image text-right"><span>OC'Aventures</span><br><span>Montpellier Nord</span></div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="red-box">
            <div class="text-center text-yellow accroche-hauteur accroche">
                <div class="text">{{ 'index.oc_hauteur'|trans }} !</div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="parallax block-img-hauteur" style='background-image: url({{ asset(baseImgUrl ~ image.imgBlock2.image) }});'></div>
    </div>
    <div class="row">
        <div class="tyro text-center col-md-12">
            <div class="info-txt-anime block-nb-tyro text-center col-md-2 col-md-offset-2">
                <div id="nb-tyro" class="nb-info-anime">
                    0
                </div>
                <div class="text"> Tyro Géantes<br>d'affilé</div>
            </div>
            <div class="equal math-separator text-center info-txt-anime col-md-1">
                <div id="equal" class="math-insigne">
                    =
                </div>
            </div>
            <div class="info-txt-anime block-distance text-center col-md-2">
                <div id="distance" class=" nb-info-anime">
                    0
                </div>
                <div class="text">mètres <br> de Tyrolienne</div>
            </div>
            <div class="plus text-center math-separator info-txt-anime col-md-1">
                <div id="plus" class="math-insigne">
                    +
                </div>
            </div>
            <div class="info-txt-anime block-hauteur text-center col-md-2">
                <div id="hauteur" class=" nb-info-anime">
                    0
                </div>
                <div class="text">mètres <br> de hauteur</div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="red-box col-xs-12">
            <div class="col-xs-6 col-xs-offset-3 text-center text-yellow accroche-enfant accroche">
                <div class="text"> PARTEZ A l'AVENTURE !</div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="parallax block-img-enfant" style='background-image: url({{ asset(baseImgUrl ~ image.imgBlock3.image) }});'></div>
    </div>
    <div class="row">
        <div class="section-txt-parcours col-xs-12">
            <div class="yellow-box col-md-6">
                <div class="col-md-12 enfant">
                    <div class="text-center">
                        <h1>{{ 'parcours.nos_parcours_enfant'|trans }} :</h1>
                        <br>
                    </div>
                    <div class="col-md-12">
                        <h4 class="text-yellow">{{ 'parcours.parcours_pour_enfant'|trans }}:</h4>
                        <p>
                            {{ 'parcours.desc_parcours_enfant'|trans|raw }}
                        </p>
                        <h4 class="text-yellow"> {{ 'parcours.les_parcours'|trans }} :</h4>
                        <p>
                            {{ 'parcours.desc_details_enfant'|trans|raw }}
                        </p>
                    </div>
                    <div class="col-md-12">
                        <p>
                            {{ 'parcours.desc_accroche_enfant'|trans|raw }}
                        </p>
                    </div>
                </div>
            </div>
            <div class="red-box col-md-6">
                <div class="col-md-12">
                    <div class="col-md-12 adulte">
                        <div class="text-center">
                            <h1 class="text-yellow">{{ 'parcours.nos_parcours_grands'|trans }} :</h1>
                            <br>
                        </div>
                        <div class="col-md-12">
                            <h4 class="text-yellow">{{ 'parcours.parcours_pour_grands'|trans }} :</h4>
                            <p>
                                <strong>
                                    {{ 'parcours.desc_grands_parcours'|trans }}
                                </strong>
                            </p>
                            <p>
                                {{ 'parcours.desc_tyro'|trans }}
                            </p>
                        </div>
                        <div class="col-md-12">
                            <p>
                                {{ 'parcours.desc_details_parcours'|trans }}
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="parallax block-img-laser" style='background-image: url({{ asset(baseImgUrl ~ image.imgBlock4.image) }});'>
            <div class="col-xs-12 text-center text-yellow accroche-laser accroche">
                <h1 class="text intro-text"> Decouvrez en notre nouvelle activite en exclusivite !</h1>
                <div class="info-txt-anime text-center">
                    <div id="nb-equipement" class="text-yellow">
                        0
                    </div>
                    <div class="info-equipement text-yellow text-center"> Equipements<br>derniere generation</div>
                </div>
            </div>
        </div>
    </div>

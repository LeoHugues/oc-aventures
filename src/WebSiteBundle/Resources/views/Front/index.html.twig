            <button type="button" class="btn btn-info disabled" id="btn-befor">précédent</button>
          </div>
          <div class="modal-body">
              {% if image.imgGallery.image is empty %}
                <p>La galerie photo sera bientôt disponible !</p>
              {% else %}
                   <img src="front/images/gallery/{{ image.imgGallery.image[0] }}" class="img-responsive" id="img-modal">
              {% endif %}
          </div>

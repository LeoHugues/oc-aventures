{% extends 'WebSiteBundle:Front:base.html.twig' %}
    {% block title %}
        Accueil
    {% endblock %}
{% block content %}
    {% trans_default_domain "traduction" %}
    <div class="row" xmlns="http://www.w3.org/1999/html">
            <div class="box">
                <div class="col-lg-12 text-center text-yellow">
                    <h1 class="brand-name">{{ 'index.oc_hauteur'|trans }} !</h1>
                    <br>
                    <div id="carousel-example-generic" class="carousel slide">
                        <!-- Indicators -->
                        <ol class="carousel-indicators hidden-xs">
                            <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
                            <li data-target="#carousel-example-generic" data-slide-to="1"></li>
                            <li data-target="#carousel-example-generic" data-slide-to="2"></li>
                        </ol>

                        <!-- Wrapper for slides -->
                        <div class="carousel-inner">
                            <div class="item active">
                                <img class="img-responsive img-full" src="{{ asset('front/images/accueil-slide-1.jpeg') }}" alt="">
                            </div>
                            <div class="item">
                                <img class="img-responsive img-full" src="{{ asset('front/images/accueil-slide-2.jpeg') }}" alt="">
                            </div>
                            <div class="item">
                                <img class="img-responsive img-full" src="{{ asset('front/images/accueil-slide-3.jpeg') }}" alt="">
                            </div>
                        </div>

                        <!-- Controls -->
                        <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
                            <span class="icon-prev"></span>
                        </a>
                        <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
                            <span class="icon-next"></span>
                        </a>
                    </div>
                    <h2 class="text-center">
                                {{ 'index.oc_bienvenue'|trans }}
                    </h2>
                    <hr class="tagline-divider">
                    <h2>
                        <small>
                            <strong>OC'AVENTURES</strong>
                        </small>
                    </h2>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="box">
                <div class="col-lg-12">
                    <hr>
                    <h2 class="intro-text text-center">
                        {{ 'index.nos_parcours_accrobranche'|trans|raw }}
                    </h2>
                    <hr>
                        <img class="img-responsive img-border img-left" src="{{ asset('./front/images/accueil-nos-parcours.jpeg') }}" alt="">
                    <hr class="visible-xs">
                    <div class="row">
                        <h4  class="text-yellow">{{ "index.ouverture_fermeture"|trans({'%dateOuverture%': date.ouverture |date('d/m/Y'), '%dateFermeture%': date.fermeture |date('d/m/Y')}) }}</h4>
                        <p> <strong>{{ 'index.accroche_nos_parcours'|trans }}</strong></p>
                        <a href="{{ path('website_parcours', {'_locale': app.request.getLocale() }) }}"><h4 class="souligner">{{ 'index.parcours_adulte'|trans }}</h4></a>
                        <p>
                        {{ 'index.parcours_adulte_desc'|trans }}
                        </p>
                        <a href="{{ path('website_parcours', {'_locale': app.request.getLocale() }) }}"><h4 class="souligner">{{ 'index.parcours_enfant'|trans }}</h4></a>
                        <p>
                            {{ 'index.parcours_enfant_desc'|trans }}
                        </p>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="box">
                <div class="col-lg-12">
                    <hr>
                    <h2 class="intro-text text-center">
                        {{ 'index.le_laser_game'|trans|raw }}
                    </h2>
                    <hr>
                        <img class="img-responsive img-border img-left" src="{{ asset('./front/images/accueil-nos-parcours.jpeg') }}" alt="">
                    <hr class="visible-xs">
                    <div class="row">
                        <h4  class="text-yellow">{{ "index.intro_texte_laser"|trans }}</h4>
                        <p> <strong>{{ 'index.accroche_laser'|trans }}</strong></p>
                        <a href="{{ path('website_parcours', {'_locale': app.request.getLocale() }) }}"><h4 class="souligner">{{ 'index.lien_laser_1'|trans }}</h4></a>
                        <p>
                        {{ 'index.accroche_laser_2'|trans }}
                        </p>
                        <a href="{{ path('website_parcours', {'_locale': app.request.getLocale() }) }}"><h4 class="souligner">{{ 'index.lien_laser_2'|trans }}</h4></a>
                        <p>
                            {{ 'index.chute_laser'|trans }}
                        </p>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="box">
                <div class="col-lg-12">
                    <hr>
                    <h2 class="intro-text text-center">
                        {{ 'index.confort_title'|trans|raw }}
                    </h2>
                    <hr>
                    <img class="img-responsive img-border img-left" src="{{ asset('./front/images/accueil-confort.jpeg') }}" alt="">
                    <div class="row">
                        <p>- {{ 'index.confort_terrasse'|trans }}</p>
                        <p>- {{ 'index.confort_pique_nique'|trans }}</p>
                    </div>
                </div>
            </div>
        </div>
{% endblock %}

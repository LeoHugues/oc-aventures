{% extends 'WebSiteBundle:Back:baseBackOffice.html.twig' %}
{% block title %}
    Administration
{% endblock %}
{% block content %}
    <form class="form-horizontal">
        <div class="well">
            <h1>Administrer les images du site :</h1> <br>
            <div class="form-group">
                <label class="col-sm-2 control-label">Toutes les images</label>
                <div class="col-sm-3">
                    <a class="btn-default btn form-control" href="{{ path('admin_images') }}">Modifier les images</a>
                </div>
            </div>
        </div>
        <div class="well">
            <h1>Administrer les liens des partenaires :</h1> <br>
            <div class="form-group">
                <label class="col-sm-2 control-label">Toutes les liens</label>
                <div class="col-sm-3">
                    <a class="btn-default btn form-control" href="{{ path('admin_partenaires') }}">Modifier les liens</a>
                </div>
            </div>
        </div>
        <div class="well">
            <h1>Administrer les tarifs :</h1> <br>
            <div class="form-group">
                <label class="col-sm-2 control-label">Les tarifs</label>
                <div class="col-sm-3">
                    <a class="btn-default btn form-control" href="{{ path('admin_tarifs') }}">Modifier les tarifs</a>
                </div>
            </div>
        </div>
        <div class="well">
            <h1>Administrer les textes du site :</h1> <br>
                <div class="form-group">
                    <label class="col-sm-2 control-label">Fran√ßais</label>
                    <div class="col-sm-3">
                        <a class="btn-default btn form-control" href="{{ path('admin_text', {'lang' : 'fr'}) }}">Modifier les textes</a>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">Anglais</label>
                    <div class="col-sm-3">
                        <a class="btn-default btn form-control" href="{{ path('admin_text', {'lang' : 'en'}) }}">Modifier les textes</a>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">Allemend</label>
                    <div class="col-sm-3">
                        <a class="btn-default btn form-control" href="{{ path('admin_text', {'lang' : 'de'}) }}">Modifier les textes</a>

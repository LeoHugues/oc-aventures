            <h1>Date d'ouverture et de fermeture du site :</h1> <br>
            <div class="form-group">
                <label class="col-sm-2 control-label">Les dates</label>
                <div class="col-sm-3">
                    <a class="btn-default btn form-control" href="{{ path('admin_date_ouvertures') }}">Modifier les dates</a>
                </div>
            </div>
        </div>
    </form>
{% endblock %}

{% extends 'WebSiteBundle:Back:baseBackOffice.html.twig' %}
{% block title %}
    Images
{% endblock %}
{% block content %}
    {% include "ComurImageBundle:Form:croppable_image_modal.html.twig"%}
    <h1 class="text-center">Gestion images</h1><br><br>
        <div class="col-sm-12">
            {{ form_start(form) }}
            <div class="col-sm-4">
                <label>Image du block Parcours</label>
                {{ form_widget(form.imgBlock2) }}
            </div>
            <div class="col-sm-4">
                <label>Image du block Laser-Game </label>
                {{ form_widget(form.imgBlock3) }}
            </div>
            <div class="col-sm-4">
                <label> Image du block Accueil </label>
                {{ form_widget(form.imgBlock4) }}
            </div>
            {{ form_end(form) }}
        </div>
{% endblock %}

{% block baseJs %}
    <script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
    <script src="{{ path('fos_js_routing_js', {"callback": "fos.Router.setData"}) }}"></script>
{% endblock %}